	///////////////////////////////////////////////////////////////

	// Add listener ///////////////////////////////////////////////
	public static function addListener(listener:Object)
	{
		// Define local variables /////////////////////////////////////
		var listeners:Array = ["_listeners"]; 
		var max:Number = listeners.length;
		var exists:Boolean = false;
		///////////////////////////////////////////////////////////////
		
		// Check if listener exists ///////////////////////////////////
		for(var index:Number = 0; index < max; index++)
		{
			if(listener === listeners[index])
			{
				trace("listener exists")
				exists = true;
				break;
			}
		}
		///////////////////////////////////////////////////////////////
		
		// Add listener ///////////////////////////////////////////////
		if(!exists) return AsBroadcaster.addListener(listener);
		///////////////////////////////////////////////////////////////
	}
	///////////////////////////////////////////////////////////////

	// Broadcast message //////////////////////////////////////////
	public static function broadcastMessage(msg:String)
	{
		return AsBroadcaster.broadcastMessage(msg);
	}
