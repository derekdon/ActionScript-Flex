	// Initialize /////////////////////////////////////////////////
	public static function initialize(obj:Object)
	{
		return AsBroadcaster.initialize(obj);
	}
	///////////////////////////////////////////////////////////////

	// Remove listener ////////////////////////////////////////////
	public static function removeListener(listener:Object)
	{
		return AsBroadcaster.removeListener(listener);
	}
